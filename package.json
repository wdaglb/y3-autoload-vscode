{
  "name": "y3-autoload-vscode",
  "displayName": "y3-autoload-vscode",
  "description": "",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.92.0"
  },
  "categories": [
    "Other"
  ],
  "publisher": "kingeast",
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "y3-autoload",
        "title": "y3生成autoload"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Y3自动加载配置",
      "properties": {
        "y3-autoload.enable": {
          "type": "boolean",
          "default": true,
          "description": "开启自动加载",
          "order": 10
        },
        "y3-autoload.configFile": {
          "type": "string",
          "default": ".autoload.json",
          "description": "扫描输出配置文件",
          "order": 20
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/vscode": "^1.92.0",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "eslint": "^8.57.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.4.5",
    "webpack": "^5.92.1",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "minimatch": "^10.0.1"
  }
}
